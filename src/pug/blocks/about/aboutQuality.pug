section.section.section-quality
	.wrapper.wrapper_quality
		.quality-wrapper.about-block-wrapper
			.about-block-wrapper_text.quality-text-block
				h2.h2-title.h2-title_quality.about-title.title-with-decor.left !{aboutQualityText.title[lang]}
				p.quality__text.about-text !{aboutQualityText.text[lang]}
				a(href=linkSignup).btn.btn-about !{buttonText.btnOpenAcc[lang]}
