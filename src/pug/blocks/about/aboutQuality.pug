				img.about-img(data-aos="zoom-in" data-aos-delay="350" src=baseDir + "assets/images/quality_1x.jpg" srcset=baseDir + "assets/images/quality_1x.jpg 1x, " + baseDir + "assets/images/quality_2x.jpg 2x" alt="quality")
				img.about-icon.quality-icon(data-aos="fade" data-aos-delay="450" src=baseDir + "assets/images/quality-icon.png" alt="conditions")
