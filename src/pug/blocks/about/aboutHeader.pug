include ../nav.pug
header.page-header.page-header_about.page-header_other-page
	.wrapper-page-image(data-aos="" data-aos-delay="300")
		.wrapper.wrapper__header-bg
			img.img-header.img-header_about(src=baseDir + "assets/images/about.png" alt="about")
	.wrapper.wrapper-header.wrapper-header_other-page
		.text-header-wrapper.text-header-wrapper_about
			h1.page-header__title.page-header__title-about.h1-title.center(data-aos="fade-up" data-aos-delay="350") !{aboutHeaderText.title[lang]}
			p.page-header__text.page-header__text-about.center(data-aos="fade-up" data-aos-delay="450") !{aboutHeaderText.text[lang]}
		.counter-list
			.counter-list__item.counter-list__item-1(data-aos="fade" data-aos-delay="300")
				h3.counter-list__title.h2-title.counter-list__title-1 !{aboutCounterText.counter1.title[lang]}
				p.counter-list__text !{aboutCounterText.counter1.text[lang]}
			.counter-list__item.counter-list__item-2(data-aos="fade" data-aos-delay="450")
				h3.counter-list__title.h2-title.counter-list__title-2 !{aboutCounterText.counter2.title[lang]}
				p.counter-list__text !{aboutCounterText.counter2.text[lang]}
			.counter-list__item.counter-list__item-3(data-aos="fade" data-aos-delay="600")
				h3.counter-list__title.h2-title.counter-list__title-3 !{aboutCounterText.counter3.title[lang]}
				p.counter-list__text !{aboutCounterText.counter3.text[lang]}
			.counter-list__item.counter-list__item-4(data-aos="fade" data-aos-delay="750")
				h3.counter-list__title.h2-title.counter-list__title-4 !{aboutCounterText.counter4.title[lang]}
				p.counter-list__text !{aboutCounterText.counter4.text[lang]}
			.counter-list__item.counter-list__item-5(data-aos="fade" data-aos-delay="900")
				h3.counter-list__title.h2-title.counter-list__title-5 !{aboutCounterText.counter5.title[lang]}
				p.counter-list__text !{aboutCounterText.counter5.text[lang]}
		.btn-header-wrapper(data-aos="fade-up" data-aos-delay="550")
			a(href=linkSignup).btn.btn-about !{buttonText.btnStartTrade[lang]}
